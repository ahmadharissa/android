<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.post">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity.PostUpdate" />
        <activity android:name=".MainActivity.MyPosts" />
        <activity android:name=".MainActivity.Signup" />
        <activity android:name=".MainActivity.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity.UsersInfo" />
        <activity android:name=".MainActivity.UserInfo" />
        <activity android:name=".MainActivity.PostInfo" />
        <activity android:name=".MainActivity.MainActivity" />
        <activity android:name=".MainActivity.Menu" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>